	public Users getPatientByID(Long Id) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public Users updatePatientById(Long Id, PatientDTO pdto) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public ApiResponse deletePatientById(Long Id) {
